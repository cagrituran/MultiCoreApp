@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Ürünler</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Ürün Ekle</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Stok</th>
        <th>Fiyat</th>
        <th>Kategori Id</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Stock</td>
            <td>@item.Price</td>
            <td>@item.CategoryId</td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.Id">Güncelle</a>
                <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>

    }
    </tbody>
</table>